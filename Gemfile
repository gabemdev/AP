source 'https://rubygems.org'

# Latest Ruby
ruby '2.4.0'

gem 'rails', '4.1.6'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'
gem 'sinatra-contrib', require: false

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# Asset pipeline
gem 'sprockets'

# Stylesheets
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'

# JavaScripts
gem 'coffee-script'
gem 'uglifier'

group :development do
  gem 'shotgun'
end
